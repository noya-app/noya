      "noya-sketch-file/*": ["./packages/noya-sketch-file/src/*"],
      "noya-sketch-model/*": ["./packages/noya-sketch-model/src/*"],
      "noya-state/*": ["./packages/noya-state/src/*"],
      "noya-svg-renderer/*": ["./packages/noya-svg-renderer/src/*"],
      "noya-svgkit/*": ["./packages/noya-svgkit/src/*"],
      "noya-utils/*": ["./packages/noya-utils/src/*"],
      "pathkit/*": ["./packages/pathkit/src/*"]
    }
  }
}
