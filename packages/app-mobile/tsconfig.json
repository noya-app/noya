{
  "extends": "../../tsconfig-base.json",
  "include": ["e2e"], // No real typecheck for src files for now
  "exclude": ["_proto", "node_modules"],
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "lib": ["es2017"],
    "target": "esnext",
    "module": "commonjs",
    "skipDefaultLibCheck": true,

    "skipLibCheck": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  }
}
