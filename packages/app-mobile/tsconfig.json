{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "lib": ["es2017"],
    "target": "esnext",
    "module": "commonjs",
    "skipLibCheck": true,
    "jsx": "react-native",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "jest", "detox"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "jest.config.js",
    "babel.config.js",
    "metro.config.js"
  ],
  "include": ["e2e/*.ts", "e2eExplicit/*.ts"]
}
